@model IEnumerable<Model.Category>

@{
    ViewBag.Title = "CategoryList";
}

<h2>CategoryList</h2>

<p>
    @if (ViewBag.Id == Session["userId"].ToString())
    {
        @Html.ActionLink("Create a New Category", "CreateCategory")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDateTime)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.IsRemoved)
        </th>*@
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDateTime)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.IsRemoved)
                </td>*@
            <td>
                @Html.ActionLink("Details", "CategoryDetails", new { userId = ViewBag.Id, id = item.Id })
            </td>
            
            @if (ViewBag.Id == Session["userId"].ToString())
            {
                <td>
                    @Html.ActionLink("Edit", "EditCategory", new { id = item.Id })
                </td>
                
                <td>
                    @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                </td>
            }


        </tr>
    }

</table>
